<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.ForgotPassword"
    android:animateLayoutChanges="false">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="#e6f2ff"
        android:layout_marginTop="46dp"
        android:id="@+id/emailField"
        android:editable="false"

        android:layout_below="@+id/textView74"
        android:layout_alignParentStart="true"
        android:hint="                       Enter Your Email" />

    <TextView
        android:text="CHANGE PASSWORD?"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/forget"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=" In order to reset your password bygit pu email, please provide the email that you used during registration process."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView74"
        android:textSize="18sp"
        android:textColor="#404040"
        android:layout_below="@+id/forget"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/new_home"
        android:id="@+id/imageButton2"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/selectAudience"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_light"
        android:text=""
        android:layout_below="@+id/send"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Send"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:background="@drawable/my_border_bg2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/emailField"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
